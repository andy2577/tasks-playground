{
  "extends": "tslint:recommended",
  "rules": {
    "curly": false,
    "arrow-parens": false,
    "array-type": [
      true,
      "array-simple"
    ],
    "ordered-imports": false,
    "no-unsafe-finally": true,
    "object-literal-sort-keys": false,
    "no-var-requires": false,
    "no-string-literal": false,
    "no-console": false,
    "no-namespace": false,
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never"
      }
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-module",
      "check-type"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "protected-static-field",
          "private-static-field",
          "public-instance-field",
          "protected-instance-field",
          "private-instance-field",
          "constructor",
          "public-static-method",
          "public-instance-method",
          "protected-static-method",
          "protected-instance-method",
          "private-static-method",
          "private-instance-method"
        ]
      }
    ],
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "no-empty": false
  },
  "jsRules": {
    "quotemark": [
      "single",
      "avoid-escape"
    ],
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "no-trailing-whitespace": true
  }
}
